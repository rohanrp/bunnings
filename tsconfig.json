{
  "compilerOptions": {
    "target": "es5",                          
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "node", "jest"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",     
    "rootDir": "src", 
    "strict": true,                 
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
